<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-user_course-table" author="Tobiasz">

        <createTable tableName="user_course">
            <column name="course_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_course_course_id" references="course(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_course_user_id" references="users(id)"/>
            </column>

        </createTable>

        <addPrimaryKey tableName="user_course"
                       columnNames="course_id, user_id"/>

    </changeSet>
</databaseChangeLog>